package com.iterator;

import java.util.Arrays;
import java.util.Comparator;
import java.util.List;

public  class Test{
	public static void main(String[] args) {
		
		List<Integer> al= Arrays.asList(2,7,4,13,77,62,15,238,23);
		
		Integer evenSum=al.stream().filter(i->i%2==0).mapToInt(Integer::intValue).sum();
		
		Integer oddMax=al.stream().filter(i->i%2!=0).max(Comparator.comparing(Integer::valueOf)).get();
		
		System.out.println("evenSum: "+ evenSum);
		System.out.println("oddMax: "+ oddMax);
		
    }
}
